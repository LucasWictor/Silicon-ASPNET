@model AccountDetailsViewModel

@{
    ViewData["Title"] = $"{Model.BasicInfo.FirstName} {Model.BasicInfo.LastName}'s profile";
}

<div class="container">
    <section id="account-details">
        <aside>
            <div class="profile-info">
                <img src="@Model.BasicInfo.ProfileImage" alt="@($"{Model.BasicInfo.FirstName} {Model.BasicInfo.LastName}")" />
                <h5>@Model.BasicInfo.FirstName @Model.BasicInfo.LastName</h5>
                <p>@Model.BasicInfo.Email</p>
            </div>
            <nav>
                <a class="btn-theme-s" asp-controller="Account" asp-action="Details">Account Details</a>
                <a class="btn-transparent" asp-controller="Auth" asp-action="SignOut"><i class="fa-light fa-arrow-right-from-bracket"></i><span>Sign out</span></a>
            </nav>
        </aside>
        <div class="details">
            <section class="basic-info">
                <form method="post" asp-controller="Account" asp-action="UpdateBasicInfo">
                    <h2>Account Details</h2>
                    <h5>Basic Info</h5>
                    <div class="content">
                        <div id="form-firstname" class="input-group">
                            <label asp-for="BasicInfo.FirstName"></label>
                            <input asp-for="BasicInfo.FirstName" />
                            <span asp-validation-for="BasicInfo.FirstName"></span>
                        </div>
                        <div id="form-lastname" class="input-group">
                            <label asp-for="BasicInfo.LastName"></label>
                            <input asp-for="BasicInfo.LastName" />
                            <span asp-validation-for="BasicInfo.LastName"></span>
                        </div>
                        <div id="form-email" class="input-group">
                            <label asp-for="BasicInfo.Email"></label>
                            <input asp-for="BasicInfo.Email" />
                            <span asp-validation-for="BasicInfo.Email"></span>
                        </div>
                        <div id="form-phone" class="input-group">
                            <label asp-for="BasicInfo.Phone"></label>
                            <input asp-for="BasicInfo.Phone" />
                            <span asp-validation-for="BasicInfo.Phone"></span>
                        </div>
                        <div id="form-bio" class="input-group">
                            <label asp-for="BasicInfo.Biography">Bio (optional)</label>
                            <textarea asp-for="BasicInfo.Biography"></textarea>
                            <span asp-validation-for="BasicInfo.Biography"></span>
                        </div>
                        <div class="form-buttons">
                            <button type="reset" class="btn-gray">Cancel</button>
                            <button type="submit" class="btn-theme">Save changes</button>
                        </div>
                    </div>
                </form>
            </section>
            <hr />
            <section class="address-info">
                <form method="post" asp-controller="Account" asp-action="UpdateAddressInfo">
                    <h5>Address</h5>
                    <div class="content">
                        <div id="form-addressline-1" class="input-group">
                            <label asp-for="AddressInfo.Addressline1"></label>
                            <input asp-for="AddressInfo.Addressline1" />
                            <span asp-validation-for="AddressInfo.Addressline1"></span>
                        </div>
                        <div id="form-addressline-2" class="input-group">
                            <label asp-for="AddressInfo.Addressline2">Address line 2 (optional)</label>
                            <input asp-for="AddressInfo.Addressline2" />
                            <span asp-validation-for="AddressInfo.Addressline2"></span>
                        </div>
                        <div id="form-postalcode" class="input-group">
                            <label asp-for="AddressInfo.PostalCode"></label>
                            <input asp-for="AddressInfo.PostalCode" />
                            <span asp-validation-for="AddressInfo.PostalCode"></span>
                        </div>
                        <div id="form-city" class="input-group">
                            <label asp-for="AddressInfo.City"></label>
                            <input asp-for="AddressInfo.City" />
                            <span asp-validation-for="AddressInfo.City"></span>
                        </div>
                        <div class="form-buttons">
                            <button type="reset" class="btn-gray">Cancel</button>
                            <button type="submit" class="btn-theme">Save changes</button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </section>
</div>
