<section id="newsletter-section">
    <div class="newsletter-container">
        <div class="title-with-icon">
            <h1>Don't Want To Miss Anything?</h1>
            <img src="images/icons/arrows.svg" alt="Arrow Icon" class="arrow-icon">
        </div>

        <div class="signup-checkbox-container">
            <div class="signup-text">
                <p>Sign up for</p>
                <p>Newsletters</p>
            </div>
            <form class="newsletter-form">
                <div class="checkbox-group">
                    <div class="checkbox-row">
                        <label>
                            <input type="checkbox" name="daily-newsletter">
                            Daily Newsletter
                        </label>
                        <label>
                            <input type="checkbox" name="Advertising Updates">
                            Advertising Updates
                        </label>
                        <label>
                            <input type="checkbox" name="Week-review">
                            Week in Review
                        </label>
                    </div>
                    <div class="checkbox-row">
                        <label>
                            <input type="checkbox" name="Event-updates">
                            Event Updates
                        </label>
                        <label>
                            <input type="checkbox" name="Startups Weekly">
                            Startups Weekly
                        </label>
                        <label>
                            <input type="checkbox" name="Podcasts">
                            Podcasts
                        </label>
                    </div>
                </div>
                <div class="email-input-group">
                    <input type="email" name="email" placeholder="✉️Your Email">
                    <button class="btn-theme-s" type="submit">Subscribe*</button>
                </div>
                <p class="agreement">
                    *Yes, I agree to the <a href="#">terms</a> and <a href="#">privacy policy</a>
                </p>
            </form>
        </div>
    </div>
</section>